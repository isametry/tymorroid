[
    {
        "id": "login_URL",
        "type": "text",
        "name": "Your Fakturoid URL:",
        "placeholder": "https://app.fakturoid.cz/robotjosef",
        "persist": true
    },
    {
        "id": "login_URL_hint",
        "type": "hint",
        "name": "",
        "value": "Please log in to [Fakturoid](https://app.fakturoid.cz) in your browser, copy the URL and paste it above."
    },
    {
        "id": "login_email",
        "type": "text",
        "name": "Login Email:",
        "placeholder": "josef@robot.cz",
        "persist": true
    },
    {
        "id": "login_key",
        "type": "securetext",
        "name": "API Key (v2):",
        "placeholder": "abcdefghi123456789",
        "persist": true
    },
    {
        "id": "login_key_hint",
        "type": "hint",
        "name": "",
        "value": "You can find your API key in [Fakturoid](https://app.fakturoid.cz) → Settings → User acccount → \"API v2 Key\" at the bottom."
    },
    {
        "id": "login_check_button",
        "type": "button",
        "name": "Check Credentials",
        "actionFunction": "fakturoidThing.login()"
    },
    {
        "id": "separator1",
        "type": "separator",
        "name":""
    },
    {
        "id": "tyme_tasks",
        "type": "tasks",
        "name": ""
    },
    {
        "id": "start_date",
        "type": "text",
        "name": "Start date",
        "placeholder": "1970-01-01",
        "persist": true
    },
    {
        "id": "end_date",
        "type": "text",
        "name": "End date",
        "placeholder": "2099-12-31",
        "persist": true
    },
    {
        "id": "date_hint",
        "type": "hint",
        "name": "",
        "value": "(you can leave the fields empty for no start / end date limit)"
    },
    {
        "id": "dates_apply_button",
        "type": "button",
        "name": "Apply All",
        "value": "",
        "actionFunction": "tymeThing.readForm()"
    }
]