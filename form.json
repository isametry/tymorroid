[
    {
        "id": "login_URL",
        "type": "text",
        "name": "Your Fakturoid URL:",
        "placeholder": "https://app.fakturoid.cz/robotjosef",
        "persist": true
    },
    {
        "id": "login_URL_hint",
        "type": "hint",
        "name": "",
        "value": "Please log in to [Fakturoid](https://app.fakturoid.cz) in your browser, copy the URL and paste it above."
    },
    {
        "id": "login_email",
        "type": "text",
        "name": "Login Email:",
        "placeholder": "josef@robot.cz",
        "persist": true
    },
    {
        "id": "login_key",
        "type": "securetext",
        "name": "API Key (v2):",
        "placeholder": "abcdefghi123456789",
        "persist": true
    },
    {
        "id": "login_key_hint",
        "type": "hint",
        "name": "",
        "value": "You can find your API key in [Fakturoid](https://app.fakturoid.cz) → Settings → User acccount → \"API v2 Key\" at the bottom."
    },
    {
        "id": "login_check_button",
        "type": "button",
        "name": "Check Credentials",
        "actionFunction": "fakturoidThing.login()"
    },
    {
        "id": "separator1",
        "type": "separator",
        "name": ""
    },
    {
        "id": "tyme_tasks",
        "type": "tasks",
        "name": ""
    },
    {
        "id": "dates_enabled",
        "type": "checkbox",
        "name": "Limit by date",
        "persist": true
    },
    {
        "id": "start_date",
        "type": "date",
        "name": "Start date",
        "persist": true
    },
    {
        "id": "end_date",
        "type": "date",
        "name": "End date",
        "persist": true
    },
    {
        "id": "unbilled_only_toggle",
        "type": "checkbox",
        "name": "Only include unbilled entries",
        "persist": true
    },
    {
        "id": "mark_billed_toggle",
        "type": "checkbox",
        "name": "Mark entries as billed on export",
        "persist": true
    },
    {
        "id": "separator2",
        "type": "separator",
        "name": ""
    },
    {
        "id": "joining_dropdown",
        "type": "dropdown",
        "name": "Group into:",
        "values": [
            {
                "category": "Categories"
            },
            {
                "project": "Projects"
            },
            {
                "task": "Tasks"
            },
            {
                "subtask": "Tasks & Subtasks"
            }
        ],
        "persist": true
    },
    {
        "id": "round_places",
        "type": "dropdown",
        "name": "Rounding",
        "values": [
            {
                "-1": "None"
            },
            {
                "0": "Whole hours"
            },
            {
                "1": "1 decimal place"
            },
            {
                "2": "2 decimal places"
            },
            {
                "3": "3 decimal places"
            },
            {
                "4": "4 decimal places"
            }
        ],
        "persist": true
    },
    {
        "id": "round_method",
        "type": "dropdown",
        "name": "Rounding method",
        "values": [
            {
                "0": "Normal (nearest)"
            },
            {
                "1": "Up"
            },
            {
                "-1": "Down"
            }
        ],
        "persist": true
    },
    {
        "id": "item_prefix",
        "type": "text",
        "name": "Item name prefix",
        "placeholder": "Design work – ",
        "persist": true
    },
    {
        "id": "vat_rate",
        "type": "number",
        "name": "VAT rate (in whole %)",
        "placeholder": "0",
        "persist": true
    },
    {
        "id": "clients_dropdown",
        "type": "dropdown",
        "name": "Client",
        "valueFunction": "fakturoidThing.getClientList()",
        "valueFunctionReloadable": true,
        "persist": true
    },
    {
        "id": "separator2",
        "type": "separator",
        "name": ""
    },
    {
        "id": "apply_all_button",
        "type": "button",
        "name": "Apply All",
        "value": "",
        "actionFunction": "mainThing.getPreview()"
    },
    {
        "id": "apply_hint",
        "type": "hint",
        "name": "",
        "value": "(In text fields, you can also press Return to apply)"
    }
]